<div class="container">
  <h1 class="text-center">Create a New Card!</h1>
    <div class = "form">
      <div class = "deviseform text-center" >
        <div class = "conatiner auto text-center">
          <div class = "row d-flex justify-content-center">
            <div class = "col-12 col-md-6 col-lg-3">
              <div class = "well txtSmall text-center">
                <%= simple_form_for([@deck, @card]) do |f| %>
                <div class="form-group mx-2">
                  <%= f.input :question, class: 'form-control'%>
                </div>
                <div class="form-group mx-2">
                 <%= f.input :answer, class: 'form-control' %>
                </div>
                <div class="form-group mx-2">
                  <%= f.input :hint, class: 'form-control' %>
                </div>
                <div class="form-group mx-2">
                  <%= f.submit "Create Card", class: "btn btn-warning my-3" %>
                </div>
                <% end %>
                <%= link_to "Back to Deck", deck_path(@deck) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


