<!-- <h1 class='text-center'><%= @user_deck.deck.name %></h1> -->
<div class="card-container swiper-container mySwiper">
  <div class="swiper-wrapper">
    <% @user_deck.deck.cards.each_with_index do |card, i|%>
      <div id="card-<%= i %>" class="card swiper-slide m-2" style="display: block;">
        <button id="hint" class="btn btn-outline-info btn-sm" type="submit" value="hint">
          <i class="fas fa-info-circle" style="font-size: 20px;"></i>
        </button>
        <div class="question m-2" style="dispaly: block;">
          <br><h3> <%= card.question %> </h3>
        </div><br>
        <div class="answer hidden a-box" style="overflow-y:scroll;">
          <h4>Answer:</h4>
          <div class="flashcard-content"><%= card.answer %> </div>
        </div>
        <div class="text-box hidden m-2">
            <textarea id=user-answer-box placeholder="type your answer"></textarea> <br>
            <button id="show-answer" class="btn btn-primary btn-sm">See Answer</button>
        </div>
        <div class="hint hidden">
          <div class="flashcard-content"> HINT:<%= card.hint %> </div>
        </div>
        <br>
        <div id ="activeCardButtons" class="d-flex justify-content-around m-6">
          <!-- <button class="flip" value="Flip" type="submit">Flip</button> -->
          <button id="know" class="know btn btn-outline-success m-2">
            <i class="fas fa-check-circle">
              <%= link_to "", user_cards_path(user_deck_id: @user_deck.id ,answer:"xxx", result: true, card_id: card.id, user_id: current_user.id), method: :post %>
           </i>
          </button>
          <button id="user-answer" class="user-answer btn btn-outline-secondary m-2" type="button" value="Type your Answer">
            <i class="fas fa-pen-square"></i>
          </button>
          <button id="unknow" class="unknow btn btn-outline-danger m-2">
            <i class="fas fa-times-circle">
            <%= link_to "", user_cards_path(user_deck_id: @user_deck.id, answer:"xxx", result: false, card_id: card.id, user_id: current_user.id), method: :post %>
            </i>
          </button>
        </div>
        <br>
      </div>
    <% end %>
  </div>
  <br>
  <!-- <hr> -->
  <div class="text-center">
    <button id="instructions" type="submit" value="Instruction">❓</button>
  </div>
  <div id="flash-instructions" class="hidden">
    <h5 class="text-center">Instructions:</h5>
    <div class=container>
      <div class="border border-dark text-center pt-2">
        <p>Check the answer? tap <strong>Flip</strong><br>Know the answer? <em>Swipe ➡️</em><br>Don't know? tap <strong>Don't Know</strong><br>Input answer to compare? <strong>Answer Me</strong></p>
      </div>
    </div>
  </div>
  <div class="swiper-pagination"></div>
</div>



