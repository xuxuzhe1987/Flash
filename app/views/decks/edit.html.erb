<h1 class="text-center mt-3">Edit <%= @deck.name %></h1>
<div class = "form">
  <div class = "deviseform text-center" >
    <div class = "container auto text-center">
      <div class = "row d-flex justify-content-center">
        <div class = "well txtSmall text-center">
          <%= form_for(@deck) do |f| %>
           <%= f.label :name %> <br>
           <%= f.text_field :name, class: "mb-2" %> <br>
          <%= f.submit "Update Deck", class: "btn btn-warning mb-2 btn-sm"  %>
            </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
        

