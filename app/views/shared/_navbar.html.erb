<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div>
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "profile-picture.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "Home", root_path, class: "dropdown-item" %>
            <%= link_to "My Profile", user_decks_path(@user_decks), class: "dropdown-item" %>
            <%= link_to "All Decks", decks_path(@decks), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item txtBig">
          <%= link_to "Login", new_user_session_path, class: "nav-link nav-options" %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class = 'mx-3 my-3' >
    <%= render "shared/search", deck: @deck %>
  </div>

</div>
