<%= form_tag(decks_path, :method => "get",   
    class: '') do %>
  <div class = "search">
    <div class="input-group txtSmall" style="width: 160px">
      <%= search_field_tag :search, params[:search], placeholder: "Find your Deck", class: "form-control" %>
    </div>
  </div>
  <div class = "searchbutton">  
    <div class="input-group-btn">  
      <%= button_tag " ", class: 'btn btn-info fab fa-searchengin mb-1 btn-lg' %>
    </div>       
  </div>  
<% end %>
