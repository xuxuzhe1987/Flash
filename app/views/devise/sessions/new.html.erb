<h2 class = "text-center pt-3" >Log in</h2>
<div class = "form">
  <div class = "deviseform text-center" >
    <div class = "conatiner auto text-center">
      <div class = "row d-flex justify-content-center">
        <div class = "col-12 col-md-6 col-lg-3">
        
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs txtSmall">
           <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        <div class="form-actions txtBig">
        <%= f.button :submit, "Log in", class: "btn btn-warning my-1" %>
        </div>
          <div class= "txtSmall text-center mt-3">
             <%= render "devise/shared/links" %>
            </div>
           </div>
         </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
        
